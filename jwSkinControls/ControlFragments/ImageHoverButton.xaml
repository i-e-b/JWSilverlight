<UserControl x:Class="jwSkinControls.ControlFragments.ImageHoverButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" MouseEnter="LayoutRoot_MouseEnter" MouseLeave="LayoutRoot_MouseLeave" MouseLeftButtonUp="LayoutRoot_MouseLeftButtonUp">
    	<Grid.RowDefinitions>
    		<RowDefinition/>
    		<RowDefinition Height="Auto"/>
    	</Grid.RowDefinitions>
    	<Image x:Name="Over" Margin="0" Stretch="None" Visibility="Collapsed" Grid.RowSpan="2"/>
    	<Image x:Name="Out" Margin="0" Stretch="None" Grid.RowSpan="2"/>
        <Image x:Name="Badge" Margin="0" Stretch="None"/>
        <Image x:Name="BadgeOver" Margin="0" Stretch="None" Visibility="Collapsed" />
        <TextBlock x:Name="Caption" Margin="0,0,0,3" TextWrapping="Wrap" VerticalAlignment="Bottom" TextAlignment="Center" FontSize="9" FontWeight="Bold" Grid.Row="1" Visibility="Collapsed"/>
    </Grid>
</UserControl>
