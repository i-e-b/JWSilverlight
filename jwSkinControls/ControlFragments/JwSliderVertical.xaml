<UserControl x:Class="jwSkinControls.ControlFragments.JwSliderVertical"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" SizeChanged="LayoutRoot_SizeChanged" MouseLeftButtonDown="SliderMouseLeftButtonDown" MouseLeftButtonUp="SliderMouseLeftButtonUp" MouseMove="SliderMouseMove">
    	<Grid.RowDefinitions>
    		<RowDefinition Height="Auto"/>
    		<RowDefinition/>
    		<RowDefinition Height="Auto"/>
    	</Grid.RowDefinitions>
    	<Image x:Name="SliderCapTop" Margin="0" VerticalAlignment="Bottom" HorizontalAlignment="Center" Stretch="None" Width="0" Height="0"/>
    	<Image x:Name="SliderCapBottom" Margin="0" VerticalAlignment="Top" HorizontalAlignment="Center" Stretch="None" Width="0" Height="0" Grid.Row="2"/>
    	<Image x:Name="SliderRail" HorizontalAlignment="Center" Margin="0" Grid.Row="1" Width="0" Stretch="Fill"/>
    	<Image x:Name="SliderThumb" HorizontalAlignment="Center" Margin="0" Grid.Row="1" Width="1" Stretch="Fill"/>
    </Grid>
</UserControl>
