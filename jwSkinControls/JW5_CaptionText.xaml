<UserControl x:Class="ExampleControls.JW5_CaptionText"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot">
    	<Grid x:Name="EffectContainer" Margin="0">
    		<Grid.Effect>
    			<DropShadowEffect Direction="270" ShadowDepth="0"/>
    		</Grid.Effect>
    		<TextBlock x:Name="CaptionBlock" TextWrapping="Wrap" Text="" TextAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,8" Foreground="White" FontSize="14" FontFamily="Lucida Sans Unicode">
    			<TextBlock.Effect>
    				<DropShadowEffect ShadowDepth="0"/>
    			</TextBlock.Effect>
    		</TextBlock>
    	</Grid>
    </Grid>
</UserControl>
