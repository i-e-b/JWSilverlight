<UserControl x:Class="ExampleControls.JwSilderHorizontal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot">
    	<Image x:Name="Rail" Margin="0"/>
    	<Image x:Name="Progress" HorizontalAlignment="Left" Margin="0" Width="100"/>
    	<Image x:Name="Buffer" Margin="0" HorizontalAlignment="Left" Width="150"/>
    	<Image x:Name="Thumb" Margin="100,0,0,0" HorizontalAlignment="Left" Width="10" VerticalAlignment="Center" Height="10"/>
    </Grid>
</UserControl>
