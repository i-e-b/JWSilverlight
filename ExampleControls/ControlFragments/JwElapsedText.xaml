<UserControl x:Class="ExampleControls.JwElapsedText"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot">
        <TextBlock x:Name="ElapsedTime" Margin="0" Padding="4,0"  TextWrapping="Wrap" Text="00:00" FontFamily="Arial" Foreground="White" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Width="Auto" FontSize="10" FontWeight="Bold"/>
    </Grid>
</UserControl>
