<UserControl x:Class="ExampleControls.JwSliderHorizontal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" SizeChanged="UserControl_SizeChanged">
    
    <Grid x:Name="LayoutRoot">
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="Auto"/>
    		<ColumnDefinition/>
    		<ColumnDefinition Width="Auto"/>
    	</Grid.ColumnDefinitions>
    	<Image x:Name="Rail" Margin="0" Stretch="Fill" VerticalAlignment="Center" Grid.Column="1"/>
    	<Image x:Name="Progress" HorizontalAlignment="Left" Margin="0" Width="100" Stretch="Fill" VerticalAlignment="Center" Grid.Column="1"/>
    	<Image x:Name="Buffer" Margin="0" HorizontalAlignment="Left" Width="150" Stretch="Fill" VerticalAlignment="Center" Grid.Column="1"/>
    	<Image x:Name="Thumb" Margin="100,0,0,0" HorizontalAlignment="Left" Width="10" VerticalAlignment="Center" Height="10" Stretch="Fill" Grid.Column="1"/>
    	<Image x:Name="LeftCap" HorizontalAlignment="Right" Margin="0" VerticalAlignment="Center"/>
    	<Image x:Name="RightCap" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Center" Grid.Column="2"/>
    </Grid>
</UserControl>
